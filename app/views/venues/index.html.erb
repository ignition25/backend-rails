<h1>Listing venues</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Venue type</th>
      <th>Description</th>
      <th>Atmosphere</th>
      <th>Cover charge</th>
      <th>Wait time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.venue_type %></td>
        <td><%= venue.description %></td>
        <td><%= venue.atmosphere %></td>
        <td><%= venue.cover_charge %></td>
        <td><%= venue.wait_time %></td>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venue', new_venue_path %>
